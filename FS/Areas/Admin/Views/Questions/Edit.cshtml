@model FS.Areas.Admin.Models.Question

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Question</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="QuestionID" />
            <div class="form-group">
                <label asp-for="TopicID" class="control-label"></label>
                <input asp-for="TopicID" class="form-control" asp-items="ViewBag.TopicID" readonly />
                <span asp-validation-for="TopicID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuestionContent" class="control-label"></label>
                <textarea asp-for="QuestionContent" class="form-control"></textarea>
                <span asp-validation-for="QuestionContent" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
