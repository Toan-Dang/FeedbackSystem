@model IEnumerable<FS.Areas.Admin.Models.Feedback>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FeedbackId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Id.UserName)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FeedbackId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Id.UserName)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.FeedbackId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.FeedbackId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.FeedbackId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>